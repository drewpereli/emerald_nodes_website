doctype html
html.text-slate-900.tracking-wider(lang="en")
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Emerald Nodes')
    title Emerald Nodes

  body
    .px-8.py-4.flex.items-center.justify-between
      span.text-4xl.font-black.text-indigo-600 GC:
      -
        var pages = [
          {label: "Home", route: "/"},
          {label: "Get Started", route: "/get-started.html"},
          {label: "Whitepaper", route: "/whitepaper.html"},
          {label: "Who Is Emerald", route: "/who-is-emerald.html"},
          {label: "Community", route: "/community.html"},
          {label: "Contact/Support", route: "/contact.html"},
        ]
      button#open-mobile-nav-btn.text-4xl(type='button')(class="md:hidden" aria-label="open navigation menu")
        i.fas.fa-bars
      nav#mobile-nav.clickable-nav.absolute.top-0.left-0.w-full.bg-black.bg-opacity-90.text-white.transition-transform.duration-500
        each page in pages
          a.h-16.w-full.flex.items-center.justify-center.uppercase.font-medium(href=page.route)= page.label
      .clickable-nav.hidden(class="md:flex md:items-center md:ml-auto md:space-x-16")
        each page in pages
          a.uppercase.font-medium.cursor-pointer.transition-colors(class="hover:text-indigo-600" href=page.route)= page.label

    #content.min-h-screen
      .flex.items-center.justify-center.text-2xl#countdown-timer
      
      .mt-8.text-6xl
        block content
      
      .bg-slate-900.text-slate-300.px-4.py-8
        .text-center.font-light Emerald Nodes
