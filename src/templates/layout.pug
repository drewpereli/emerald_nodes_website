include ../components/inline-svg
include ../components/inline-link

block variables

doctype html
html.h-full.bg-black-off.font-body.tracking-wider.overflow-x-hidden(lang="en")
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content=metaDescription || 'The service Emerald Nodes offers its users is the ability to set up, manage, and own real reward yielding “nodes”. A “node” is a computer that serves as a backbone in the infrastructure of its native cryptocurrency network. Anyone can buy an Emerald Node or $EM, our native token; it works just like any other tradable cryptocurrency, and is used to set up nodes on the protocol\'s web app.')
    if title
      title Emerald Nodes - #{title}
    else
      title Emerald Nodes
    

  body.h-full.flex.flex-col
    .shrink-0(class="md:px-12")
      .p-4.flex.items-center.justify-between.h-48.border-b-2(class="border-white-off/50")
        a.shrink-0(href="/")
          img(src=require('Images/logo-with-text.png') style="height: 100px;")

        -
          var pages = [
            {label: "Get Started", route: "/get-started.html"},
            {label: "Nodes App", route: "https://app.emeraldnodes.finance", targetBlank: true, hideUntilNodesLaunch: true},
            {label: "Whitepaper", route: "/whitepaper.html"},
            {label: "Who Is Emerald", route: "/who-is-emerald.html"},
            {label: "Community", route: "/community.html"},
            {label: "Contact", route: "/contact.html"},
          ]
        div(class="md:self-end")
          button#open-mobile-nav-btn.text-4xl.text-white-off(type='button')(class="md:hidden" aria-label="open navigation menu")
            i.fas.fa-bars
          nav#mobile-nav.absolute.top-0.left-0.w-full.bg-black-off.bg-opacity-90.text-white-off.transition-transform.duration-500
            each page in pages
              a.h-16.w-full.flex.items-center.justify-center.uppercase.font-medium(href=page.route target=page.targetBlank ? "_blank" : "_self" data-hide-until-nodes-launch=page.hideUntilNodesLaunch data-hide-until-swap-launch=page.hideUntilSwapLaunch)= page.label
          .hidden.text-base(class="md:flex md:items-center md:ml-auto md:space-x-12 text-white-off/50")
            each page in pages
              a.uppercase.cursor-pointer.transition-colors(class="hover:underline" href=page.route target=page.targetBlank ? "_blank" : "_self" data-hide-until-nodes-launch=page.hideUntilNodesLaunch data-hide-until-swap-launch=page.hideUntilSwapLaunch)= page.label

    #content.grow.shrink-0.basis-auto
      block content
      
    .mt-32.p-8.shrink-0(class="bg-primary-500/70 text-white-off/30 space-y-8")
      .flex.flex-col.items-center.space-y-8.uppercase.text-lg.tracking-wide(class="md:justify-around md:flex-row md:space-y-0 md:flex-wrap")
        div &copy; #[span(id="copyright-year")] Emerald Nodes LLC
        .space-x-8
          a(href="https://discord.com/invite/BVNJ9t2WJh" target="_blank" class="hover:text-white-off")
            i.fab.fa-discord
          a(href="https://twitter.com/Emerald_Nodes" target="_blank" class="hover:text-white-off")
            i.fab.fa-twitter
        div 
          a(href="mailto:contact@emeraldnodes.finance" class="hover:underline hover:text-white-off/60") contact@emeraldnodes.finance
        div Updated: April 14, 2022
      .flex.items-center.justify-center.space-x-8
        +inline-link("/privacy-policy.html").text-sm privacy policy
        +inline-link("/terms-of-service.html").text-sm terms of service
