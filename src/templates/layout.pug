include ../components/inline-svg

doctype html
html.h-full.bg-black-off.tracking-wider(lang="en")
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Emerald Nodes')
    title Emerald Nodes

  body.h-full.flex.flex-col
    .px-12.shrink-0
      .py-4.flex.items-center.justify-between.h-48.border-b-2(class="border-white-off/50")
        a.space-x-4.flex.items-center(href="/")
          img(src=require('Images/logo-small.png') height="100" width="100")
          .flex.text-secondary-300.space-x-2
            +inline-svg('chevron-triple').h-8.rotate-180
            span.text-xl.font-bold.mt-2 EMERALD NODES
            +inline-svg('chevron-triple').h-12.translate-y-4

        -
          var pages = [
            {label: "Get Started", route: "/get-started.html"},
            {label: "Whitepaper", route: "/whitepaper.html"},
            {label: "Who Is Emerald", route: "/who-is-emerald.html"},
            {label: "Community", route: "/community.html"},
            {label: "Contact|Support", route: "/contact.html"},
          ]
        .self-end
          button#open-mobile-nav-btn.text-4xl(type='button')(class="md:hidden" aria-label="open navigation menu")
            i.fas.fa-bars
          nav#mobile-nav.absolute.top-0.left-0.w-full.bg-black.bg-opacity-90.text-white.transition-transform.duration-500
            each page in pages
              a.h-16.w-full.flex.items-center.justify-center.uppercase.font-medium(href=page.route)= page.label
          .hidden.text-lg(class="md:flex md:items-center md:ml-auto md:space-x-12 text-white-off/50")
            each page in pages
              a.uppercase.cursor-pointer.transition-colors(class="hover:underline" href=page.route)= page.label

    #content.grow.shrink-0.basis-auto
      block content
      
    .mt-32.h-32.px-4.py-8.flex.justify-around.shrink-0(class="bg-primary-500/70")
      each word in ['copyright', 'date', 'social buttons', 'contact info']
        span.uppercase.text-lg.tracking-wide(class="text-white-off/30")= word
